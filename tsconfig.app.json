{
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "./typed-router.d.ts"
        ]
    },
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ]
}